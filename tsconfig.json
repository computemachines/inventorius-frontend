{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@styles/*": ["src/styles/*"],
      "@api/*": ["src/api-client/*"],
      "@components/*": ["src/components/*"]
    },
    // "strict": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "sourceMap": true,
    "jsx": "react",
    "lib": ["DOM", "ES2020"]
  },
  "include": ["src"],
  "typedocOptions": {
    "entryPoints": ["src"],
    "entryPointStrategy": "expand",
    "out": "docs"
  }
}
